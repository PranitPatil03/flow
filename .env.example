# Database
DATABASE_URL="postgresql://user:password@localhost:5432/nodebase"

# Security
# To generate a new ENCRYPTION_KEY, you can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="your-encryption-key-here"

# Authentication (Better Auth)
# Better Auth requires a secret to sign cookies and tokens
# You can generate a good secret using: npx auth secret
BETTER_AUTH_SECRET="your-better-auth-secret-here"
BETTER_AUTH_URL="http://localhost:3000"

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Polar.sh
POLAR_ACCESS_TOKEN="your-polar-access-token"
POLAR_SUCCESS_URL="http://localhost:3000/success"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Dev Tools
NGROK_URL="your-ngrok-url.ngrok-free.app"

# Inngest (Background Jobs)
# These are required ONLY for production deployment. Local dev server auto-handles this.
INNGEST_EVENT_KEY="your-inngest-event-key"
INNGEST_SIGNING_KEY="your-inngest-signing-key"
